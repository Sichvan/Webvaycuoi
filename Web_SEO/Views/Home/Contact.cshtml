
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="~/shortcut icon" href="~/images/favicon.png" type="image/x-icon">

    <title>
        Liên hệ
    </title>

    <link rel="~/stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
    <link rel="~/stylesheet" type="text/css" href="~/css/bootstrap.css" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
</head>

<body>
    <div class="hero_area">
        <!-- Thanh công cụ -->
        <header class="header_section" style="width:100%">
            <nav class="navbar navbar-expand-lg custom_nav-container ">
                <h1>
                    <span>
                        Sichvan Studio
                    </span>
                </h1>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class=""></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent" style="background-color:palevioletred">
                    <ul class="navbar-nav  ">
                        <li class="nav-item ">
                            <a class="nav-link" href="~/Home/Index">
                                Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Home/Shop">
                                Váy cưới
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Home/Testimonial">
                                Chứng nhận
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="~/Home/Contact">
                                Liên hệ
                            </a>
                        </li>

                        <div class="user_option">
                            <a href="">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <span>
                                    Đăng nhập
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-shopping-bag" aria-hidden="true"></i>
                            </a>
                            <form class="form-inline ">
                                <button class="btn nav_search-btn" type="submit">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                            </form>
                        </div>
                    </ul>
                </div>
            </nav>
        </header>
    </div>

    <br />


    <!-- Liên hệ với SV  -->  <!-- Xong chỉ thiếu dẫn link gửi vs ggmap -->
    <section class="contact_section ">
        <div class="container px-0">
            <div class="heading_container ">
                <h2 class="">
                    Liên hệ với Sichvan Studio
                </h2>
            </div>
        </div>
        <div class="container container-bg">
            <div class="row">
                <div class="col-lg-7 col-md-6 px-0">
                    <div class="map_container">
                        <div class="map-responsive">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.9777225009093!2d106.65084907326336!3d10.736200259938029!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752e42a34dd54d%3A0xec5d77c4e3607e86!2zOTkgxJAuIELDuWkgTWluaCBUcuG7sWMsIFBoxrDhu51uZyA2LCBRdeG6rW4gOCwgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1715333341121!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-5 px-0">
                    <form action="#">
                        <div>
                            <input type="text" placeholder="Tên" />
                        </div>
                        <div>
                            <input type="email" placeholder="Email" />
                        </div>
                        <div>
                            <input type="text" placeholder="Số điện thoại" />
                        </div>
                        <div>
                            <input type="text" class="message-box" placeholder="Tin nhắn" />
                        </div>
                        <div class="d-flex ">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#gui">
                                Gửi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal" id="gui">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title"><center>Cảm ơn đã tin tưởng và sử dụng dịch vụ </center></h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        Thông tin của bạn đã được ghi nhận chúng tôi sẽ liên lạc trong vòng 10 phút <br />
                        Mọi thắc mắc có thể trao đổi qua page hoặc trực tiếp tại 99 Bùi Minh Trực Phường 6 Quận 8
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </section>



    <section class="info_section  layout_padding2-top">


        <!-- 3 icon MXH -->
        <div class="social_container">
            <div class="social_box">
                <a href="https://www.facebook.com/profile.php?id=100039094591637&mibextid=ZbWKwL">
                    <i class="fa fa-facebook" aria-hidden="true"></i>
                </a>
                <a href="https://twitter.com/jaxieee2125">
                    <i class="fa fa-twitter" aria-hidden="true"></i>
                </a>
                <a href="https://www.instagram.com/kha.i01/">
                    <i class="fa fa-instagram" aria-hidden="true"></i>
                </a>
                <a href="https://www.youtube.com/channel/UCp5QIlgnoj89jwpphLTdsKQ">
                    <i class="fa fa-youtube" aria-hidden="true"></i>
                </a>
            </div>
        </div>


        <!-- Phần địa chỉ cuối -->
        <div class="info_container ">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-3">
                        <center>
                            <h6>
                                Sichvan Studio
                            </h6>
                        </center>

                        <p>&copy;Chạm đến giấc mơ công chúa <br /> @DateTime.Now.Year - Vững bước theo thời gian</p>

                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="info_form ">
                            <center>
                                <h5>
                                    Theo dõi
                                </h5>
                            </center>
                            <form action="#">
                                <input type="email" placeholder="Nhập email">
                                <center>
                                    <button>
                                        Đăng ký
                                    </button>
                                </center>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <center>
                            <h6>
                                Tư vấn
                            </h6>
                        </center>
                        <p>
                            Mọi thắc mắc có thể liên hệ qua Fanpage hay trực tiếp tại Studio
                        </p>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <h6>
                            Liên hệ
                        </h6>
                        <div class="info_link-box">
                            <a>
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span> 99 Bùi Minh Trực </span>
                            </a>
                            <a>
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>+84 0586505224</span>
                            </a>
                            <a>
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span> Sichvan@gmail.com</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
    </script>
    <script src="~/js/custom.js"></script>

</body>

</html>

